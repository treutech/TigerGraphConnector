<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
  http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>with-all-dependencies</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>.properties</include>
        <include>tg-jdbc-driver.properties</include>
        <!--include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
        <include>licenses.html</include>
        <include>licenses/</include>
        <include>notices/</include-->
        <include>com.tigergraph.jdbc:*</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <!--useProjectArtifact>true</useProjectArtifact-->
      <useTransitiveFiltering>true</useTransitiveFiltering>
      <excludes>
        <!-- Exclude these jars during packaging.-->
        <exclude>com.fasterxml.jackson</exclude>
        <exclude>io.confluent*</exclude>
        <exclude>org.apache.*:*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>